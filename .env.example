# Decidim Environment Configuration
# Copy this file to .env and update with your values: cp .env.example .env
# DO NOT commit .env to version control

# ==========================================
# Database Configuration
# ==========================================
POSTGRES_HOST=postgres
POSTGRES_USER=decidim
POSTGRES_PASSWORD=decidim_pass_here
POSTGRES_DB=decidim_production
DATABASE_URL=postgres://decidim:decidim_pass_here@postgres/decidim_production

# ==========================================
# Rails Configuration
# ==========================================
RAILS_ENV=production
SECRET_KEY_BASE=your_generated_secret_here
RAILS_SERVE_STATIC_FILES=true
RAILS_LOG_LEVEL=info

# ==========================================
# Domain Configuration
# ==========================================
DECIDIM_HOST=decidev.DOMAIN_NAME.ext
DOMAIN_NAME=decidev.DOMAIN_NAME.ext

# ==========================================
# Redis Configuration
# ==========================================
REDIS_URL=redis://redis:6379/0

# ==========================================
# Email Configuration (SMTP)
# ==========================================
SMTP_ADDRESS=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_smtp_password
SMTP_DOMAIN=decidev.DOMAIN_NAME.ext
SMTP_AUTHENTICATION=plain
SMTP_ENABLE_STARTTLS_AUTO=true

# ==========================================
# Email Sender Configuration
# ==========================================
MAILER_SENDER=noreply@decidev.DOMAIN_NAME.ext
MAILER_REPLY_TO=support@decidev.DOMAIN_NAME.ext

# ==========================================
# Generation Commands
# ==========================================
# Generate SECRET_KEY_BASE:
#   openssl rand -hex 64
#
# Generate POSTGRES_PASSWORD:
#   openssl rand -hex 32
#
# ==========================================
# Notes
# ==========================================
# - Change all default passwords before production use
# - Keep .env file secure and never commit to Git
# - Configure SMTP settings for email notifications
# - Update domain names to match your actual domain
